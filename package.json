{
  "name": "webpack-by-sample",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --watch dev.webpack.config.js --exec \"webpack-dev-server --mode development --open --config dev.webpack.config.js\"",
    "build:dev": "rimraf dist && webpack --config dev.webpack.config.js",
    "build:prod": "rimraf dist && webpack --config prod.webpack.config.js",
    "start:prod": "node ./server",
    "lint": "eslint --fix ./src/**/*.{ts,tsx}",
    "build:perf": "rimraf dist && webpack --config perf.webpack.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.(md|scss|json)": [
      "prettier --write",
      "git add"
    ],
    "*.(js|jsx|ts|tsx)": [
      "prettier --write",
      "npm run lint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/finny88/webpack-by-sample.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/finny88/webpack-by-sample/issues"
  },
  "homepage": "https://github.com/finny88/webpack-by-sample#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@hot-loader/react-dom": "^16.13.0",
    "@types/jquery": "^3.3.35",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-redux": "^7.1.8",
    "@types/redux": "^3.6.0",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^2.30.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.1.0",
    "compression-webpack-plugin": "^3.1.0",
    "css-loader": "^3.5.2",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.8.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-react": "^7.19.0",
    "file-loader": "^6.0.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.2.0",
    "mini-css-extract-plugin": "^0.9.0",
